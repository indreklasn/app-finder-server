type User {
  name: String!
  email: String!
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  role: Role! @default(value: "CUSTOMER")
}

enum Role {
  ADMIN
  CUSTOMER
}

type Tag {
  name: String!
  id: ID! @id
}

type Product {
  id: ID! @id
  name: String!
  url: String!
  description: String!
  logo: String!
  reputation: Float
  tags: [String!] @scalarList(strategy: RELATION)
}




